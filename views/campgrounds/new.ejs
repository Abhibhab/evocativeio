<% layout('layouts/boilerplate')%>
<div class="row container-fluid">
    <h1 class="text-center text-center py-3 my-3">Uploading......</h1>
   <div class="col-6 offset-3 py-5 my-3  ">
       
    <form action="/campgrounds" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label class"form-label" for="title">Title</label>
             <input class="form-control" type="text" id="title" name="campground[title]" required>
             <div class="valid-feedback">
             Looks Good!!
             </div>
             <div class="invalid-feedback">
                 Enter a title
             </div>
        
            </div>
        
        <div class="mb-3">
            <label class"form-label" for="location">Location</label>
            <input class="form-control" type="text" id="location" name="campground[location]" required>
            <div class="valid-feedback">
                Looks Good!!
                </div>
        </div>
        <div class="mb-3">
            <label for="formFileMultiple" class="form-label">Choose Image</label>
            <input class="form-control" type="file" id="formFileMultiple" name="image">
          </div>
        
     
        <div class="mb-3">
            <label class"form-label" for="description">description</label>
            <textarea class="form-control" type="text" id="description" name="campground[description]" required></textarea>
        </div>
        <div class="mb-3">
        <button class="btn btn-success " styles="background-color:">Add New Picture</button>
    </div>
   
    </form>
    <a class="btn btn-primary" href="/campgrounds">All Pictures</a>


   </div>

  